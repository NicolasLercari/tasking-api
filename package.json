{
  "name": "tasks-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "node-dev ./src/index.js",
    "lint": "eslint . --ext=js,jsx; exit 0",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --write **/*.{js,json,md}",
    "test": "cross-env NODE_ENV=test jest --rootDir=tests --passWithNoTests"
  },
  "dependencies": {
    "@hapi/hapi": "20.2.1",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "boom": "^7.3.0",
    "config": "^3.3.6",
    "eslint-plugin-jsdoc": "^32.2.0",
    "got": "^11.8.2",
    "hapi-pagination": "^4.0.0",
    "hapi-swagger": "14.1.0",
    "joi": "^17.4.2",
    "mongoose": "^5.12.0",
    "redis": "^3.1.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-settle": "^2.3.0",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-dev": "^7.0.0",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx}": [
      "prettier --write",
      "eslint --ignore-path .prettierignore --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "engines": {
    "node": "14.x"
  }
}
